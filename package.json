{
  "name": "ai-assistant",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "cd server && bun run --watch index.ts",
    "dev:client": "cd client && bun run dev",
    "build": "cd client && bun run build",
    "install:all": "bun install && cd client && bun install && cd ../server && bun install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
